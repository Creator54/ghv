#!/usr/bin/env bash
# A CLI tool to explore public repositories hosted on GitHub.

# Check if required dependencies (jq, gh, fzf) are available
deps_status=$(which jq gh fzf less)
if [[ ! $deps_status ]]; then
	echo "Please make sure jq, gh, fzf, less are available in the environment!"
	exit 1
fi

# Function to display file content
function preview() {
	# Retrieve and display file content using gh and jq
	local file_content=$(gh api -X GET "/repos/$owner/$repo/contents/$path" | jq -r '.content' | base64 -d)

	echo "$file_content" | less
}

# Function to explore GitHub
function explorer() {
	repo_pwd="$repo/$(echo $path | sed 's#^/##')"
	selection=$(gh api -X GET "/repos/$owner/$repo/contents/$path" | jq -r '.[].name' | fzf --preview-window up:50% --header "$owner: [ $repo_pwd ]")

	handle_interrupt

	response=$(gh api -X GET "/repos/$owner/$repo/contents/$path")
	type_check=$(echo "$response" | jq -r 'type') # If object then preview, if array then open
	path="$path/$selection"

	if [[ $type_check == "object" ]]; then
		preview
	else
		explorer
	fi
}

# Check if Ctrl+C was pressed
function handle_interrupt() {
	if [[ $? -eq 130 ]]; then
		echo "Ctrl+C detected. Exiting..."
		exit 0
	fi
}

# Register the handle_interrupt function to handle Ctrl+C
trap handle_interrupt SIGINT

# Main script
while true; do
	# Check if a GitHub username is provided as an argument
	if [[ -z $1 ]]; then
		cat <<-USAGE
			Usage: $0 <username/repo/folder>

			A CLI tool to explore public repositories hosted on GitHub.

			Example:
			  $ $0 nixos
			  $ $0 nixos/nix
			  $ $0 nixos/nix/README.md

		USAGE
		exit 1
	fi

	owner=$(echo $1 | cut -d '/' -f1)
	repo=$(echo $1 | cut -d '/' -f2)
	path=$(echo $1 | cut -d '/' -f3- | sed 's/\/$//')

	if [[ $owner == $repo ]]; then
		path=""
		repo=$(gh api "/users/$owner/repos?per_page=100&page=1" | jq -r '.[].name' | fzf --preview-window up:50% --header "$owner: [ $repo$path ]")

		handle_interrupt

		# Check if the selection is invalid and restart the loop
		if [[ -z $repo ]]; then
			continue
		fi

	fi

	explorer
done
